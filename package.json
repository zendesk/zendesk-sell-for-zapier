{
  "name": "zendesk-sell-for-zapier",
  "private": true,
  "version": "1.0.25",
  "description": "Zendesk Sell App in Zapier",
  "repository": "git@github.com:zendesk/zendesk-sell-for-zapier.git",
  "homepage": "https://www.zendesk.com/sell/",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build-dev": "tsc --watch",
    "prepare": "yarn build",
    "test": "jest",
    "coverage": "jest --collectCoverageFrom=src/**.ts --coverage",
    "lint": "tslint --project tsconfig.json",
    "lint-fix": "tslint --project tsconfig.json --fix && echo \"👍 Lint passed\" || echo \"👎 Found few lint errors\"",
    "zapier-validate": "yarn build && zapier validate",
    "zapier-test": "yarn build && zapier validate && yarn test",
    "zapier-push": "yarn build && zapier push"
  },
  "engines": {
    "node": "^14.19.0",
    "npm": ">=7.11.2"
  },
  "dependencies": {
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "moment": "^2.29.1",
    "node": "^14.19.0",
    "zapier-platform-core": "11.2.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.12",
    "jest": "^27.4.7",
    "jest-junit": "^13.0.0",
    "nock": "^13.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFilesAfterEnv": [
      "./jestGlobalSettings.js"
    ]
  }
}
